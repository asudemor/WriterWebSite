@model EntityLayer.Concrete.Message2

@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>YENİ MESAJ GİRİŞ EKRANI</h1>
<br />

@using (Html.BeginForm("SendMessage", "Message", FormMethod.Post))
{
    @Html.Label("Alıcı")
    <input type="text" class="form-control" />
    <br />
    @*@Html.Label("Alıcı")*@
    @*@Html.DropDownListFor(x => x.ReceiverID, (List<SelectListItem>)ViewBag.rv, new { @class = "form-control" })*@
    <br />
    @Html.Label("Konu")
    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
    <br />
    @Html.Label("Mesaj İçeriği")
    @Html.TextAreaFor(x => x.MessageDetails, 10, 3, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.MessageDetails)
    <br />
    <button class="btn btn-info">MESAJI GÖNDER</button>
}

