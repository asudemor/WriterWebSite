@using EntityLayer.Concrete
@model List<Blog>

@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Yazarın Blogları</h1>

<a href="#" class="btn btn-primary">YENİ BLOG</a>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Tarih</th>
        <th>Kategori</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.BlogID</th>
            <td>@item.BlogTitle</td>
            <td>@(((DateTime)item.BlogCreateDate).ToString("dd MMM yyyy"))</td>
            <td>@item.Category.CategoryName</td>
            @if (item.BlogStatus)
            {
                <td><span class="badge badge-success">Aktif</span></td>
            }
            else
            {
                <td><span class="badge badge-secondary">Pasif</span></td>
            }
            <td>
                <!--Sil modal Butonu-->
                <button type="button" class="btn btn-outline-danger" data-toggle="modal" data-target="#Sil_@item.BlogID">
                    Sil
                </button>

                <!--Modal-->
                <div class="modal fade" id="Sil_@item.BlogID" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLongTitle">Blog Sil</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <h4>Bloğu silmek istiyor musunuz?</h4>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-info mx-4" data-dismiss="modal">Vazgeç</button>
                                @Html.ActionLink("Sil", "BlogDelete", new { id = @item.BlogID }, new { @class = "btn btn-danger mx-4" })
                            </div>
                        </div>
                    </div>
                </div>
            </td>
            <td><a href="/Blog/BlogEdit/@item.BlogID" class="btn btn-outline-behance">GÜNCELLE</a></td>
        </tr>
    }
</table>
