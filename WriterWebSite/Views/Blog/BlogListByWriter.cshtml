@using EntityLayer.Concrete
@model List<Blog>

@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Yazarın Blogları</h1>

<a href="#" class="btn btn-primary">YENİ BLOG</a>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Tarih</th>
        <th>Kategori</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.BlogID</th>
            <td>@item.BlogTitle</td>
            <td>@(((DateTime)item.BlogCreateDate).ToString("dd MMM yyyy"))</td>
            <td>@item.Category.CategoryName</td>
            @if (item.BlogStatus){<td><span class="badge badge-success">Aktif</span></td>}
            else{<td><span class="badge badge-secondary">Pasif</span></td>}
            <td><a href="/Blog/DeleteBlog/@item.BlogID" onclick="return confirm('Silmek istediğine emin misin?');" class="btn btn-danger">Sil</a></td>
            <td><a href="#" class="btn btn-facebook">GÜNCELLE</a></td>
        </tr>
    }
</table>
