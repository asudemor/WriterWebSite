@using EntityLayer.Concrete
@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<Category>
@{
    ViewData["Title"] = "Category";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Kategori Listesi</h1>
<h1>@ViewBag.Durum</h1>
<br />

<a href="/Admin/Category/AddCategory" class="btn btn-primary">Kategori Ekle</a>
<br />
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Pasif Yap</th> 
        <th>Aktif Yap</th> 
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.CategoryID</th>
            <td>@item.CategoryName</td>
            <td><a href="/Admin/Category/DeleteCategory/@item.CategoryID" id="deleteBtn" onclick="return confirm('Kategoriyi silmek istediğinizden emin misiniz?');" class="btn btn-outline-danger">PASİF YAP</a></td>
            <td><a href="/Admin/Category/DeleteCategory/@item.CategoryID" id="deleteBtn" onclick="return confirm('Kategoriyi silmek istediğinizden emin misiniz?');" class="btn btn-outline-success">AKTİF YAP</a></td>
            <td><a href="#" class="btn btn-outline-dark">DÜZENLE</a></td>
        </tr>
    }
</table>
<br />

@Html.PagedListPager((IPagedList)Model, page => Url.Action("Category", new { page }))

